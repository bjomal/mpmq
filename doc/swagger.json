{
    "swagger": "2.0",
    "info": {
        "version": "0.5.0",
        "title": "My Precious Message Queue",
        "description": "A simple Message Queue implementation for PHP using RESTful API",
        "contact": {
            "name": "Bj√∏rne Malmanger",
            "email": "bjorne@malmanger.no",
            "url": "http://www.malmanger.no"
        },
        "license": {
            "name": "GPLv3",
            "url": "http://www.gnu.org/licenses/gpl.txt"
        }
    },
    "host": "www.malmanger.no",
    "basePath": "/mpmq",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/queues": {
            "get": {
                "description": "list of available queues.\n",
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "title": "ArrayOfQueues",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/queue"
                            }
                        }
                    },
                    "404": {
                        "description": "No Queues Found"
                    }
                }
            },
            "post": {
                "description": "Create new queue",
                "parameters": [
                    {
                        "name": "queue",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/newQueue"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/queue"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        },
        "/queues/{id}": {
            "get": {
                "description": "Get information about queue with id={id}\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID og queue to get",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Queue information",
                        "schema": {
                            "$ref": "#/definitions/queue"
                        }
                    },
                    "404": {
                        "description": "No Queues Found"
                    }
                }
            },
            "put": {
                "description": "Update queue\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue to update",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "queue",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/queue"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Queue updated",
                        "schema": {
                            "$ref": "#/definitions/queue"
                        }
                    },
                    "404": {
                        "description": "Queue not found"
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete queue with id={id}\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue to delete",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Queue deleted OK"
                    },
                    "404": {
                        "description": "No Queues Found"
                    }
                }
            }
        },
        "/queues/{id}/messages": {
            "get": {
                "description": "list of available messages in queue with id={id}.\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "title": "ArrayOfMessages",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/message"
                            }
                        }
                    },
                    "404": {
                        "description": "No Messages or Queue Found"
                    }
                }
            },
            "post": {
                "description": "Create new message",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "queue",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/newMessage"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/message"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        },
        "/queues/{id}/messages/{messageId}": {
            "get": {
                "description": "Get information about message with id={messageId} in queue with id={id}\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID og queue to get",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "messageId",
                        "in": "path",
                        "description": "ID og queue to get",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Queue information",
                        "schema": {
                            "$ref": "#/definitions/message"
                        }
                    },
                    "404": {
                        "description": "No Queues Found"
                    }
                }
            },
            "put": {
                "description": "Update message in queue\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue to update",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "messageId",
                        "in": "path",
                        "description": "ID og queue to get",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "message",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/message"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Queue updated",
                        "schema": {
                            "$ref": "#/definitions/message"
                        }
                    },
                    "404": {
                        "description": "Queue not found"
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete queue with id={id}\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of queue to delete",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Message deleted OK"
                    },
                    "404": {
                        "description": "No Message Found"
                    }
                }
            }
        }
    },
    "definitions": {
        "queue": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Default timeout in seconds for messages in flight, default 24h (86400s) minimum 60s",
                    "default": 86400,
                    "min": 60
                },
                "available": {
                    "type": "integer",
                    "format": "int32",
                    "description": "Number of available messages in queue"
                },
                "in-flight": {
                    "type": "integer",
                    "format": "int32",
                    "description": "Number of messages In Flight"
                }
            }
        },
        "newQueue": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Default timeout in seconds for messages in flight, default 24h (86400s) minimum 60s",
                    "default": 86400,
                    "min": 60
                }
            }
        },
        "errorModel": {
            "type": "object",
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "message": {
            "type": "object",
            "required": [
                "messageId",
                "title"
            ],
            "properties": {
                "messageId": {
                    "type": "integer",
                    "format": "int64"
                },
                "title": {
                    "type": "string"
                },
                "data": {
                    "type": "string",
                    "format": "byte"
                },
                "timeout": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Default timeout in seconds for messages in flight, default 24h (86400s) minimum 60s",
                    "default": 86400,
                    "min": 60
                },
                "in-flight": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "newMessage": {
            "type": "object",
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "data": {
                    "type": "string",
                    "format": "byte"
                },
                "timeout": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Default timeout in seconds for messages in flight, default 24h (86400s) minimum 60s",
                    "default": 86400,
                    "min": 60
                }
            }
        }
    }
}